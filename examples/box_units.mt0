my_box = box {
	factorial = func @(n) {
		(n >= 1) ? -> {
			(n * #factorial$(n - 1))!
		} : -> {
			1!
		}
	}
	
	sqrt = func @(n) {
		(n.pow$(0.5))!
	}
	
	reverse_list = func @(list) {
		rev = $()
		do $(i = size$(list) - 1, i >= 0, --i) -> {
			rev[] = list[i]
		}
		rev!
	}
}

my_box.sqrt$(2)
my_box.factorial$(6)
my_box.reverse_list$($(1, 2, 3, 4, 5, 6))